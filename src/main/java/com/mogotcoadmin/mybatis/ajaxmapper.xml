<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mogotcoadmin.mapper.AjaxMapper">
	
	<select id="getUserCnt" resultType="Integer">
		SELECT count(*) FROM user
	</select>	
	
	<select id="getMentorCnt" resultType="Integer">
		SELECT count(*) FROM mentor
	</select>	
	
	<select id="getMentoringCnt" resultType="Integer">
		SELECT count(*) FROM mentoring
	</select>
		
	<select id="getPurchasePrice" resultType="Integer">
		SELECT sum(purprice) FROM purchase
	</select>	
	

	
</mapper>